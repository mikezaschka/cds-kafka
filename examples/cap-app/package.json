{
  "name": "cap-kafka-example-app",
  "version": "1.0.0",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "cds-kafka": "*"
  },
  "devDependencies": {
    "@sap/cds-dk": "^8",
    "sqlite3": "5.1.7",
    "jest": "29.7.0"
  },
  "cds": {
    "requires": {
      "kafka-messaging": {
        "kind": "kafka-service",
        "format": "cloudevents",
        "credentials": {
          "[production]": {
            "clientId": "ccloud-nodejs-client-50243f22-c6ea-4f4a-b0d5-1fc2d85ab035",
            "brokers": [
              "xxx.germanywestcentral.azure.confluent.cloud:9092"
            ],
            "ssl": true,
            "sasl": {
              "mechanism": "PLAIN",
              "username": "",
              "password": ""
            }
          },
          "[development]": {
            "clientId": "cap-kafka-example-app-1",
            "brokers": [
              "localhost:29092"
            ],
            "logLevel": "1"
          }
        },
        "consumer": {
          "groupId": "cap-kafka-example-app"
        },
        "topics": {
          "someTopic": {
            "fromBeginning": true
          },
          "/topic-(eu|us)-.*/i": {
            "fromBeginning": false
          }
        }
      },
      "kafka-service": {
        "impl": "cds-kafka"
      }
    }
  }
}
